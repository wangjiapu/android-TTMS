<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/order_src"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:padding="20dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/order_play_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="37"
                android:gravity="center_vertical"
                android:text="复仇者联盟"

                android:textColor="#000000" />

            <TextView
                android:id="@+id/order_cinema_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="21"
                android:textSize="12sp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="影院：大地影院" />

            <TextView
                android:id="@+id/order_show_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="21"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="场次：23:10" />

            <TextView
                android:id="@+id/order_ticket_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="21"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="数量 ： 2" />

        </LinearLayout>

        <TextView
            android:id="@+id/order_buy"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:textColor="#2b4a70"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:text="立刻购买" />

        <TextView
            android:visibility="gone"
            android:id="@+id/order_buy2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已完成"/>
    </LinearLayout>

</android.support.v7.widget.CardView>