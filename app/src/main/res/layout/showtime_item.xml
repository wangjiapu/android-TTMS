<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLength="8"
                android:maxLines="1"
                android:text="13:25"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showtime"
                android:gravity="center"
                android:maxLength="8"
                android:maxLines="1"
                android:text="14:30散场" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/showtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="国语2D"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/studioID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showtype"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:maxLength="8"
                android:maxLines="1"
                android:text="1号厅" />

        </RelativeLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="￥32.00"
            android:textColor="@color/title" />

        <TextView
            android:id="@+id/buyplay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="@drawable/bugplay_bg"
            android:gravity="center"
            android:text="购票"
            android:textColor="#b42020" />


    </LinearLayout>

</android.support.v7.widget.CardView>